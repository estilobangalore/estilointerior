{
  "version": 2,
  "builds": [
    {
      "src": "vercel-entry.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "20.x"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run vercel-build",
        "outputDirectory": "dist/public",
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "vercel-entry.js"
    },
    {
      "src": "/api/contact",
      "dest": "vercel-entry.js"
    },
    {
      "src": "/api/consultations",
      "dest": "vercel-entry.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "vercel-entry.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}