{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "buildCommand": false,
  "outputDirectory": "dist/public",
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "dist/public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
